<li id="post-<%= post.id %>">
  <div class="center title"><%= link_to post.title, post %></div>
  <span class="content"><%= post.content %></span>
  <div class="timestamp">
    <%= post.created_at.strftime("%Y-%m-%d") %>
    <%= link_to "댓글 보기", post %>
    <% if current_user?(post.user) && current_user.admin? %>
      <%= link_to "삭제", post, method: :delete,
                                       data: { confirm: "확실 해요?" } %>
    <% end %>
  </div>
</li>

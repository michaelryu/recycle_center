<%= form_for(@post) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
  	<%= f.label :title, class: "fieldlabel" %>
    <%= f.text_field :title, placeholder: "New post title..." %>
		
		<%= f.label :content, class: "fieldlabel" %>
		<%= f.text_area :content, placeholder: "Compose new post..." %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>



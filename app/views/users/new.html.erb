<h1>회원가입</h1>
<div class='container'>
  <div class='row'>
    <div class='col-md-6 col-md-offset-3'>
      <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <%= f.label :name, class: "fieldlabel", value: "이름" %>
        <%= f.text_field :name, class: 'form-control' %>
        <%= f.label :email, class: 'fieldlabel', value: "이메일" %>
        <%= f.text_field :email, class: 'form-control' %>
        <%= f.label :password, class: 'fieldlabel', value: "비밀번호" %>
        <%= f.password_field :password, class: 'form-control' %>
        <%= f.label :password_confirmation, '비밀번호 확인', class: 'fieldlabel' %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
        <%= f.submit '가입하기', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
